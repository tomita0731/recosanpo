<h2><%= @user.name %>様のユーザー詳細</h2>

<table class = "table">
  <tbody>
    <tr><%= image_tag @user.get_profile_image(100,100) %></tr>
    <tr><th>会員ID</th><td><%= @user.id %></td></tr>
    <tr><th>名前</th><td><%= @user.name %></td></tr>
    <tr><th>メールアドレス</th><td><%= @user.email %></td></tr>
    <tr><th>登録日</th><td><%= @user.created_at.strftime('%Y/%m/%d') %></td></tr>
  </tbody>
</table>

<div><%= link_to 'アカウント削除', admin_user_path(@user), method: :delete, data: { confirm: '本当に削除しますか？' } %> </div>


<table class="table">
 <tbody>
  <% @posts.each do |post| %>
   <tr>
     <td><%= image_tag post.user.get_profile_image(100,100) %></td>
     <td><%= post.user.name %></td>
     <td><%= post.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
     <td><%= post.step_count %>歩</td>
     <td><%= post.place %></td>
     <td><%= post.genre %></td>
     <td><%= link_to "削除", admin_post_path(post.id), method: :delete,data: { confirm: '本当に削除しますか？' } %></td>
     <td><%= link_to "#{post.post_comments.count}コメント", admin_post_path(post.id) %></td>
   </tr>
   <tr>
     <% if post.images.attached? %>
       <%= image_tag post.image, size: "100x100" %>
     <% else %>
     <% end %>
    </tr>
   
  <% end %>
 </tbody>
</table>

