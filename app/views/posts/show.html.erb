<h1>投稿詳細</h1>
<div>
  <span>
  <%= @post.user.name %>
  </span>
  <span>
    <%= @post.step_count %>
  </span>
  <span>
   <%= @post.place %>
  </span>
  <span>
    <%= @post.body %>
  </span>
  <span>
    <% if @post.images.attached? %>
      <%= image_tag @post.image, size: "100x100" %>
    <% else %>
     <% end %>
    </span> 
  </div>
  <div>
  <% if @post.user == current_user %>
  <%= link_to "編集", edit_post_path(@post) %>
  <%= "|" %>
  <%= link_to "削除", post_path(@post), method: :delete %>
  <% end %>
  </div>
  