<h1>新規投稿</h1>
<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
  <% @post.errors.full_messages.each do |message| %>
   <li><%= message %></li>
  <% end %>
   </ul>
  <% end %>

<%= form_with model: @post do |f| %>
 <div class="field">
  <label for="step_count">今日の歩数</label>
  <%= f.number_field :step_count %>
 </div> 
 <dic class="field">
  <label for="place">場所</label>
  <%= f.text_field :place %>
</div>
<div class="field">
 <label for="genre">ジャンル</label>
 <%= f.select :genre, ['日常', 'おでかけ', '旅行'], {include_blank: '---' } %>
</div>
<div class="field">
 <label for="body">本文</label>
 <%= f.text_area :body %>
</div>
<div class="field">
 <label for="image">画像</label>
 <%= f.file_field :image, accept: "image/*" %>
</div>

 <%= f.submit "投稿" %>
<% end %>