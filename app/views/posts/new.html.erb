<h1>新規投稿</h1>
<%= form_with model: @posts do |f| %>
 <div class="field">
  <label for="step_count">今日の歩数</label>
  <%= f.number_field :step_count %>
 </div> 
 <dic class="field">
  <label for="place">場所</label>
  <%= f.text_field :place %>
</div>
<div class="field">
 <label for="genre_id">ジャンル</label>
 <%= f.text_field :genre_id %>
</div>
<div class="field">
 <label for="body">本文</label>
 <%= f.text_area :body %>
</div>
<div class="field">
 <label for="image">画像</label>
 <%= f.file_field :image, accept: "image/*" %>
</div>

 <%= f.submit "投稿" %>
<% end %>