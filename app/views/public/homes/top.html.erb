<h2 class=heading><span>Top</span></h2>
   <% if user_signed_in? %>
    <div class="card-list-container py-10 mt-10">
      <div class="row mt-5 text-center flex-column">
      <% @posts.each do |post| %> 
        <div class="card col-12 col-sm-6 col-md-6 col-lg-3 p-0 mx-auto mt-5 shadow-lg">
          <div class="card text-center">
            <div class="card-header">
             <%= link_to  post_path(post.id),class: "text-dark" do %>
              <div class="card-step_count">今日の歩数
                <i class="fa-solid fa-shoe-prints"></i>
                <strong><%= post.step_count %></strong>歩
              </div>
             <% end %>
            </div>
            <div class="card-body">
          <div class="row justify-content-center align-items-center">
           <div class="col-7 px-0 text-center">
            <div class ="card-user pb-2">
            <%= image_tag post.user.get_profile_image(50,50), class: "border-radius.how" %>
            <% if post.user == current_user %>
              <%= link_to mypage_path(current_user),class: "text-dark" do %>
                <strong><%= post.user.name %></strong>
              <% end %>
            </div>
            <% else %>
              <%= link_to user_path(post.user.id),class: "text-dark" do %>
                <strong><%= post.user.name %></strong>
              <% end %>
            </div>
            <div class="card-follow">
              <% if current_user.following?(post.user) %>
                <%= link_to "フォロー外す", user_relationships_path(post.user.id), method: :delete, class: "btn btn-light btn-sm" %>
              <% else %>
                <%= link_to "フォローする", user_relationships_path(post.user.id), method: :post, class: "btn btn-light btn-sm"%>
              <% end %>
            </div>
            <% end %>
           </div>
           <div class="col-5 px-0 align-items-center">
             <div class="card-place mt-2">
              <i class="fa-solid fa-location-dot"></i>&nbsp;&nbsp;<%= post.place %>
             </div>
             <div class="card-genre mt-3">
             <i class="fa-solid fa-person-walking"></i>&nbsp;&nbsp;<%= post.genre %>
             </div>
           </div>
          </div>
              <% unless post.body.blank? %>
              <hr width="auto">
              <div class="row">
                <div class="card-body"><%= post.body %></div>   
                </div>
              </div>
              <% end %>
            </div>
            <div class= body-img>
              <% if post.images.attached? %>
                <%= image_tag url_for(post.images.first), class: "card-img-bottom" %>
              <% else %>
              <% end %>
            </div>
            <div class="card-footer text-body-secondary">
              <%= post.created_at.strftime('%Y/%m/%d %H:%M') %> |
              <div id="favorites_btn_<%= post.id %>">
                <%= render 'public/favorites/btn', post: post %>
              </div>
              <%= link_to "コメント#{post.post_comments.count}件", post_path(post.id), class: "text-dark" %>
              <i class="fa-regular fa-comment"></i>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <% else %>
    <div class="container">
      <div class="row my-5">
        <h3 class="heading col-md-10 col-sm-8 mx-2 mx-sm-auto text-center">
          <%= image_tag 'recosanpo.png' %>へようこそ
        </h3>
      </div>
      <div class="col-md-10 col-sm-8 mx-2 mx-sm-auto rounded ">
        <span><%= link_to "ゲストログイン（閲覧用)", users_guest_sign_in_path, method: :post, class: "btn btn-block mt-1 btn-success mt-3" %></span>
        <span><%= link_to "ログイン",new_user_session_path, class: "btn btn-block mt-1 btn-warning text-white mt-3" %></span>
        <span><%= link_to "新規アカウント",new_user_registration_path, class: "btn btn-block mt-1 btn-info mt-3" %></span>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-12 text-center">
        <span><%= link_to "管理者ログインはこちら", new_admin_session_path, class: "text-secondary" %></span>
      </div>
    </div>
  <% end %>