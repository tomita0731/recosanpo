<div class="form-group">
  <label for="post_step_count">歩数  <span class="badge badge-danger">必須</span></label>
  <%= f.number_field :step_count, class:"form-control", placeholder:"歩いた数を数字で入力してください" %>
</div>
<div class="form-group">
  <label for="post_place">場所  <span class="badge badge-danger">必須</span></br>
    <span class="place_comment">フリーワードか住所のどちらかでご入力してください</br>
    住所で入力された場合は地図表示することができます</span>
  </label>
  <%= f.text_field :place, class:"form-control", placeholder:"フリーワードで場所をご入力ください" %>
  <div class="input-group mb-3 mt-4">
    <div class="input-group-prepend">
      <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-tenge-sign"></i></span>
    </div>
    <%= text_field_tag :zipcode, nil, class: "form-control", placeholder: "郵便番号" %>
  </div>
  <div class="input-group mb-3 mt-4">
    <div class="input-group-prepend">
      <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-location-dot"></i></span>
    </div>
    <%= f.text_field :address, class: "form-control", placeholder: "住所" %>
  </div>
</div>
<div class="form-group">
  <label for="post_genre">ジャンル</label>
  <%= f.select :genre, ['日常', 'おでかけ', '旅行', 'その他'], {include_blank: '散歩のジャンルをお選びください' }, class:"form-control" %>
</div>
<div class="form-group">
  <label for="post_body">本文</label>
  <%= f.text_area :body, class:"form-control", placeholder:"ご自由にご記入ください" %>
</div>
<div class="form-group">
  <label for="post_images">画像</label>
  <%= f.file_field :images, accept: "image/*", class:"btn" %>
</div>

<div class="form-group">
  <%= f.radio_button :publish_status, Post.publish_statuses.key(1), checked: true %>
  <%= f.label :publish_status_release, Post.publish_statuses_i18n[:released] %>
  <%= f.radio_button :publish_status, Post.publish_statuses.key(0) %>
  <%= f.label :publish_status_norelease, Post.publish_statuses_i18n[:noreleased] %>
  <span class="badge badge-danger">  必須</span>
</div>

<% if current_page?(action: "new") %>
  <%= f.submit "投稿", class: "btn btn-lg btn-block  mt-5 btn-info " %>
<% else %>
  <span><%= f.submit "保存", class: "btn btn-block mt-1 btn-info " %></span>
<% end %>

<%= javascript_pack_tag "jpostal",  'data-turbolinks-track': 'reload' %>