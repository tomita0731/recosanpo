<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light py-4 mb-0">アカウント情報編集</h5>

        <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-body p-4">
            <div class="mx-auto text-center">
              <p>アカウント名と<br>メールアドレスと<br>パスワードを入力してください。</p>
            </div>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-user"></i></span>
                </div>
                <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName" %>
              </div>

              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text" aria-hidden="true"><i class="fas fa-envelope"></i></span>
                </div>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"inputEmail" %>
            
              </div>
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text" aria-hidden="true"><i class="fas fa-lock"></i></span>
                </div>
                <%= f.password_field :password, autocomplete: "new-password", class:"form-control", id:"inputPassword", placeholder:"新しいパスワード(6文字以上)" %>
              </div>

              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text" aria-hidden="true"><i class="fas fa-lock"></i></span>
                </div>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", id:"inputPassword", placeholder:"新しいパスワード(確認)" %>
              </div>

              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text" aria-hidden="true"><i class="fas fa-lock"></i></span>
                </div>
                <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control", id:"inputPassword", placeholder:"現在のパスワード（変更するには必要です）" %>
                <%= f.submit "登録", class:"btn btn-lg btn-block btn-info mt-5" %>
              </div>
            <% end %>
        </div>
    </div>
  </div>
  <div class="row mb-5">
    <div class="col-12 text-center ">
      <%= link_to "<<  戻る", edit_user_path(current_user.id), class: "text-secondary" %>
    </div>
  </div>
</div>