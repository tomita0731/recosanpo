<%= render 'public/posts/search' %>

<h1>ユーザー一覧</h1>
<table class="table">
 <thead>
  <tr>
   <th>image</th>
   <th>name</th>
  </tr>
</thead>
<tbody>
 <% @users.each do |user| %>
  <tr>
   <td><%= image_tag user.get_profile_image(100,100) %></td>
   <td><%= user.name %></td>
   <td>
    <% if user == current_user %>
     <%= link_to "mypage", mypage_path(current_user) %>
    <% else %>
     <%= link_to "Show", user_path(user.id) %>
    <% end %>
     </td>

  </tr>
  <% end %>
</tbody>
</table>