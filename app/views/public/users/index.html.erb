<h2 class=heading><span>All User</span></h2>

<div class="all-user-container py-10 mt-10">
  <div class="row mt-5">
    <div class="col-md-8 col-sm-12 mx-2 mx-sm-auto">
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th>introduction</th>
            <th></th>
          </tr>
       </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <th><%= image_tag user.get_profile_image(100,100), class: "border-radius" %>
              <td>
                <%= link_to user_path(user.id),class: "text-dark" do %>
                  <%= user.name %>
                <% end %>
              </td>
              <td><%= user.introduction %></td>
              <td>
                <% if user == current_user %>
                  <%= link_to mypage_path(current_user), class: "text-dark" do %>
                    <i class="fa-solid fa-circle-info"></i>マイページ
                  <% end %>
                <% else %>
                  <%= link_to user_path(user.id),class: "text-dark" do %>
                    <i class="fa-solid fa-circle-info"></i>詳細
                  <% end %>
                  <td>
                    <% if current_user.following?(user) %>
                      <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-light" %>
                    <% else %>
                      <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-light"%>
                    <% end %>
                  </td>
                <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>