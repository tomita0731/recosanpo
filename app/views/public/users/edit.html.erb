<h1>ユーザー編集</h1>
<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user , url: user_path(@user), method: :patch do |f| %>
  <div>
   <label for="use_name">アカウント名</label>
   <%= f.text_field :name, id:"user_name" %>
  </div>
  <div>
   <label for="use_image">アイコン</label>
   <%= f.file_field :profile_image, id:"user_image" %>
  </div>
  <div>
   <label for="use_introduction">プロフィール</label>
   <%= f.text_area :introduction, id:"user_introduction" %>
  </div>
  <div>
   <%= f.submit "更新" %>
  </div> 
<% end %>
<div>
 <%= link_to "アカウント情報編集", edit_user_registration_path(current_user.id) %>
</div>
<div> 
 <%= link_to "退会", user_path(current_user.id), method: :delete, "data-confirm" => "本当に退会しますか?" %>
</div>