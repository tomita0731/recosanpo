<h2 class=heading><span>マイページ編集</span></h2>
<% if @user.errors.any? %>
<%= @user.errors.count %>件のエラーが発生しました
<ul>
  <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>
<% end %>

<div class="container">
  <div class="form-row no-gutters">
    <div class="form-group col-md-6 col-sm-12 mx-2 mx-sm-auto rounded shadow-lg px-5 py-3 my-5">
      <%= form_with model: @user , url: user_path(@user), method: :patch do |f| %>
        <div calss="form-group">
          <label for="input-user-name">アカウント名</label>
          <%= f.text_field :name, id:"user_name", class:"form-control" %>
        </div>
        <div calss="form-group">
          <label for="input-introduction">プロフィール</label>
          <%= f.text_area :introduction, id:"user_introduction", class:"form-control" %>
        </div>
        <div calss="form-group">
          <label for="input-profile_image">アイコン画像</label>
          <%= f.file_field :profile_image, id:"user_image", class:"btn" %>
        </div>
        <span><%= f.submit "保存", class: "btn btn-block mt-1 btn-info " %></span>
        <span><%= link_to "退会", user_path(current_user.id), method: :delete, "data-confirm" => "本当に退会しますか?", class: "btn btn-block mt-1 btn-danger" %></span>
      <% end %>
    </div>
  </div>
  <div class="form-row mb-5">
    <div class="col-12 text-center">
      <%= link_to "アカウント情報編集", edit_user_registration_path(current_user.id), class: "text-secondary" %>
    </div>
  </div>
</div>