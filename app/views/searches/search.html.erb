<h2>Results index</h2>

<table class="table table-hover table-inverse">
  <% if @range == "User" %>
    <tbody>
      <% @users.each do |user| %>
        <tr>
         <%= link_to user_path(user.id) do %>
          <td><%= image_tag user.get_profile_image %></td>
          <td><%= user.name %></td>
        <% end %>
        </tr>
      <% end %>
      <% if @users.count == 0 %>
        <p>検索結果がありませんでした</p>
      <% end %>
    </tbody>
  <% else %>
     <tbody>
       <% @posts.each do |post| %>
        <tr>
        <%= link_to user_path(post.user.id) do %>
         <td><%= image_tag post.user.get_profile_image %></td>
         <td><%= post.user.name %></td>
        <% end %>
        <%= link_to post_path(post.id) do %>
         <td><%= post.step_count %>歩</td>
         <td><%= post.place %></td>
         <td><%= post.genre %></td>
        <% end %>
        </tr>
      <% end %>
      <% if @posts.count == 0 %>
        <p>検索結果がありませんでした</p>
      <% end %>
    </tbody>
  <% end %>
</table>